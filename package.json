{
  "name": "caddy-npm",
  "version": "1.0.1",
  "description": "Install caddy with npm",
  "repository": {
    "type": "git",
    "url": "https://github.com/RecuencoJones/caddy-npm"
  },
  "scripts": {
    "postinstall": "go-npm install",
    "preuninstall": "go-npm uninstall",
    "test": "caddy -version"
  },
  "goBinary": {
    "name": "caddy",
    "path": "./bin",
    "url": {
      "linux": "https://github.com/caddyserver/caddy/releases/download/v{{version}}/caddy_v{{version}}_linux_{{arch}}.tar.gz",
      "freebsd": "https://github.com/caddyserver/caddy/releases/download/v{{version}}/caddy_v{{version}}_freebsd_amd64.tar.gz",
      "darwin": "https://github.com/caddyserver/caddy/releases/download/v{{version}}/caddy_v{{version}}_darwin_amd64.zip",
      "windows": "https://github.com/caddyserver/caddy/releases/download/v{{version}}/caddy_v{{version}}_windows_amd64.zip"
    }
  },
  "dependencies": {
    "go-npm": "RecuencoJones/go-npm#ce647cb47f7825464a55425620e026968662b693"
  }
}
